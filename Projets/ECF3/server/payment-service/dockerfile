FROM maven as builder

WORKDIR /app

COPY pom.xml .

RUN mvn dependency:go-offline

COPY src ./src

RUN mvn package -DskipTests

FROM openjdk:11

COPY --from=builder /app/target/payment-service.jar .

EXPOSE 9050

CMD ["java", "-jar", "payment-service.jar"]

